@model EntityLayer.Entities.Sirket
@{
    ViewBag.Title = "Create";
}


<div class="container">
    <div id="form">
        <form method="post" id="isYeriIslem">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

            <div class="form-group">
                <label for="SirketAdi">Şirket Adı <span class="gerekliAlan">*</span></label>
                <input type="text" class="form-control" name="SirketAdi" />
                @Html.ValidationMessageFor(x => x.SirketAdi, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="SirketIl">İl <span class="gerekliAlan">*</span></label>
                <input type="text" class="form-control" name="SirketIl" />
                @Html.ValidationMessageFor(x => x.SirketIl, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="SirketIlce">İlçe <span class="gerekliAlan">*</span></label>
                <input type="text" class="form-control" name="SirketIlce" />
                @Html.ValidationMessageFor(x => x.SirketIlce, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="SirketMahalle">Mahalle <span class="gerekliAlan">*</span></label>
                <input type="text" class="form-control" name="SirketMahalle" />
                @Html.ValidationMessageFor(x => x.SirketMahalle, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="AracSayisi">Araç Sayısı <span class="gerekliAlan">*</span></label>
                <input type="number" class="form-control" name="AracSayisi" />
                @Html.ValidationMessageFor(x => x.AracSayisi, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="SirketPuani">Şirket Puanı <span class="gerekliAlan">*</span></label>
                <p><input type="number" class="form-control" name="SirketPuani" /></p>
                @Html.ValidationMessageFor(x => x.SirketPuani, "", new { @style = "color:red" })
                <p><h7> Gerekli alanlar <span class="gerekliAlan">*</span> ile belirtilmiştir.</h7></p>

            </div>

            <button class="btn btn-primary" type="submit">Şirket Ekle</button>

        </form>

    </div>

</div>

