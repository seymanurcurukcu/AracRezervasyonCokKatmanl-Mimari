@model EntityLayer.Entities.Kullanici

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/SirketYoneticiLayout.cshtml";
}

<div class="container">
    <div id="form">
        <form method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                      
            <div class="form-group">

                <div class="form-group">
                    <label for="KullaniciIsmi">Adı <span class="gerekliAlan">*</span></label>
                    <input type="text" class="form-control" name="KullaniciIsmi" />
                    @Html.ValidationMessageFor(x => x.KullaniciIsmi, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label for="KullaniciSoyismi">Soyadı <span class="gerekliAlan">*</span></label>
                    <input type="text" class="form-control" name="KullaniciSoyismi" />
                    @Html.ValidationMessageFor(x => x.KullaniciSoyismi, "", new { @style = "color:red" })
                </div>

                <div class="form-group">
                    <label for="Adres">Adres <span class="gerekliAlan">*</span></label>
                    <input type="text" class="form-control" name="KullaniciAdres" />
                    @Html.ValidationMessageFor(x => x.KullaniciAdres, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label for="TelefonNo">Telefon No <span class="gerekliAlan">*</span></label>
                    <input type="text" class="form-control" name="KullaniciTel" />
                    @Html.ValidationMessageFor(x => x.KullaniciTel, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label for="MAIL">MAIL <span class="gerekliAlan">*</span></label>
                    <input type="email" class="form-control" name="KullaniciMail" />
                    @Html.ValidationMessageFor(x => x.KullaniciMail, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label for="KullaniciAdi">Kullanıcı Adı <span class="gerekliAlan">*</span></label>
                    <input type="text" class="form-control" name="KullaniciAdi" />
                    @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @style = "color:red" })
                </div>

                <div class="form-group">
                    <label for="Sifre">Şifre <span class="gerekliAlan">*</span></label>
                    <p><input type="text" class="form-control" name="Sifre" /></p>
                    @Html.ValidationMessageFor(x => x.Sifre, "", new { @style = "color:red" })
                    <p><h7> Gerekli alanlar <span class="gerekliAlan">*</span> ile belirtilmiştir.</h7></p>

                </div>

                <button class="btn btn-primary" type="submit">Kullanıcı Ekle</button> <br />
                <a href="/SirketYoneticiKullanici/Index" class="btn btn-primary">Kullanıcı Listesi</a>
            </div>
        </form>

    </div>

</div>
