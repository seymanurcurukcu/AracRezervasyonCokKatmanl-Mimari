@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MusteriLayout.cshtml";
}

<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/panel/ltr/css/Login.css">


<div class="container">
    <div class="screen">
        <div class="screen__content">
            <form action="/MusteriLogin/Login" method="post" class="login">
                <div class="login__field">
                    <i class="login__icon fas fa-user"></i>
                    <input type="text" class="login__input" placeholder="Kullanıcı Adı" name="MusteriKullaniciAdi">
                </div>
                <div class="login__field">
                    <i class="login__icon fas fa-lock"></i>
                    <input type="password" class="login__input" placeholder="Şifre" name="Sifre">
                </div>
                <br />
                <div> @ViewBag.hata </div>
                <button class="button login__submit">
                    <span class="button__text">Giriş Yap</span>
                    <i class="button__icon fas fa-chevron-right"></i>
                </button>	<br>
                <a href="/MusteriLogin/KayitOl" target="_blank">
                    <span class="button__text">Üye Ol</span>
                </a><br><br>

            </form>

        </div>
        <div class="screen__background">
            <span class="screen__background__shape screen__background__shape4"></span>
            <span class="screen__background__shape screen__background__shape3"></span>
            <span class="screen__background__shape screen__background__shape2"></span>
            <span class="screen__background__shape screen__background__shape1"></span>
        </div>
    </div>
</div>

