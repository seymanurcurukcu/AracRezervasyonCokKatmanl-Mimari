@model List<EntityLayer.Entities.Arac>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/SirketYoneticiLayout.cshtml";
}

<h6 class="header-title pb-3 mt-0">Araç Listesi</h6>
<div class="table-responsive">
    <table class="table table-hover mb-0">
        <thead>
            <tr class="align-self-center">
                <th>Id</th>
                <th>Şirket Adı</th>
                <th>Araç Adı</th>
                <th>Modeli</th>
                <th>Ehliyet Yaşı</th>
                <th>Min Yaş Sınırı</th>
                <th>Günlük Sınır KM</th>
                <th>Aracın Kendi Anlık KM</th>
                <th>Airbag</th>
                <th>Bagaj Hacmi</th>
                <th>Koltuk Sayısı</th>
                <th>Günlük Kiralama Fiyatı</th>
                <th>Yakıtı</th>
                <th>Vites Türü</th>
                <th>Durumu</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AracID</td>
                    <td>@item.Sirket.SirketAdi</td>
                    <td>@item.AracAdi</td>
                    <td>@item.Modeli</td>
                    <td>@item.EhliyetYasi</td>
                    <td>@item.MinimumYasSiniri</td>
                    <td>@item.GunlukSinirKm</td>
                    <td>@item.AracınKendiAnlikKm</td>
                    <td>@item.Airbag</td>
                    <td>@item.BagajHacmi</td>
                    <td>@item.KoltukSayisi</td>
                    <td>@item.GunlukKiralikFiyati</td>
                    <td>@item.Yakiti</td>
                    <td>@item.vitesTuru</td>
                    <td>@item.durum</td>
                </tr>
            }

        </tbody>
    </table>
</div>

