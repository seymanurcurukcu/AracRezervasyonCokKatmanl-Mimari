
@model IEnumerable<EntityLayer.Entities.Arac>
@{
    ViewBag.Title = "AracListesi";
    Layout = "~/Views/Shared/MusteriLayout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-lg-3">
            <div class="left-sidebar">
                <div class="accordion" id="accordionExample">
                    <div class="card mt-4">
                        <a data-toggle="collapse" href="#collapseone" class="job-list" aria-expanded="true" aria-controls="collapseone">
                            <div class="card-header" id="headingone">
                                <h6 class="mb-0 text-dark f-18">Adres</h6>
                            </div>
                        </a>
                        <div id="collapseone" class="collapse show" aria-labelledby="headingone">
                            <div class="card-body p-0">
                                @using (Html.BeginForm("AracListesi", "MusteriArac", FormMethod.Get))
                                {
                                    <div class="col">
                                        <label>İl:</label><br />
                                        @Html.TextBox("il")


                                    </div>
                                    <div class="col">
                                        <label> İlçe:</label><br />
                                        @Html.TextBox("ilce")


                                    </div>
                                    <div class="col">
                                        <label>Mahalle:</label><br />
                                        @Html.TextBox("mahalle")


                                    </div><br>

                                    <center><input type="submit" name="name" value="Ara" /> </center><br>


                                }
                            </div>

                        </div>
                    </div>
                    <div class="card mt-4">
                        <a data-toggle="collapse" href="#collapseTwo" class="job-list" aria-expanded="false" aria-controls="collapseTwo">
                            <div class="card-header" id="headingTwo">
                                <h6 class="mb-0 text-dark f-18">Fiyat Aralığı</h6>
                            </div>
                        </a>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo">
                            <div class="card-body p-0">
                                @using (Html.BeginForm("AracListesi", "MusteriArac", FormMethod.Get))
                                {
                                    <div class="col">
                                        <label>Minimum Fiyat(TL):</label>
                                        @Html.TextBox("fiyatMin")
                                    </div><br>
                                    <div class="col">
                                        <label>Maksimum Fiyat(TL):</label>
                                        @Html.TextBox("fiyatMax")
                                    </div><br>


                                    <center><input type="submit" name="name" value="Ara" /> </center><br>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="card mt-4">
                        <a data-toggle="collapse" href="#collapseThree" class="job-list" aria-expanded="false" aria-controls="collapseThree">
                            <div class="card-header" id="headingThree">
                                <h6 class="mb-0 text-dark f-18">Vites Türü</h6>
                            </div>
                        </a>
                        <div id="collapseThree" class="collapse" aria-labelledby="headingThree">
                            <div class="card-body p-0">
                                @using (Html.BeginForm("AracListesi", "MusteriArac", FormMethod.Get))
                                {
                                    <div class="col">
                                        <label>Vites Türü (Düz veya Otomatik):</label>

                                        @Html.TextBox("vites")
                                    </div><br>



                                    <center><input type="submit" name="name" value="Ara" /> </center><br>
                                }


                            </div>
                        </div>
                    </div>
                    <div class="card mt-4">
                        <a data-toggle="collapse" href="#collapseFour" class="job-list" aria-expanded="false" aria-controls="collapseFour">
                            <div class="card-header" id="headingFour">
                                <h6 class="mb-0 text-dark f-18">Yakıt Tipi</h6>
                            </div>
                        </a>
                        <div id="collapseFour" class="collapse" aria-labelledby="headingFour">
                            <div class="card-body p-0">
                                @using (Html.BeginForm("AracListesi", "MusteriArac", FormMethod.Get))
                                {

                                    <div class="col">
                                        <label>Yakıt Tipi (Benzin veya Dizel):</label>
                                        @Html.TextBox("yakit")
                                    </div><br>


                                    <center><input type="submit" name="name" value="Ara" /> </center><br>
                                }


                            </div>
                        </div>
                    </div>
                    <div class="card mt-4">
                        <a data-toggle="collapse" href="#collapseFive" class="job-list" aria-expanded="false" aria-controls="collapseFive">
                            <div class="card-header" id="headingFive">
                                <h6 class="mb-0 text-dark f-18">Koltuk Sayısı</h6>
                            </div>
                        </a>
                        <div id="collapseFive" class="collapse" aria-labelledby="headingFive">
                            <div class="card-body p-0">
                                @using (Html.BeginForm("AracListesi", "MusteriArac", FormMethod.Get))
                                {

                                    <div class="col">
                                        <label>Koltuk Sayısı:</label>
                                        @Html.TextBox("koltuk")
                                    </div><br>

                                    <center><input type="submit" name="name" value="Ara" /> </center><br>
                                }


                            </div>
                        </div>
                    </div>


                    <div class="card mt-4">
                        <a data-toggle="collapse" href="#collapseSix" class="job-list" aria-expanded="false" aria-controls="collapseSix">
                            <div class="card-header" id="headingSix">
                                <h6 class="mb-0 text-dark f-18">Araç Adı</h6>
                            </div>
                        </a>
                        <div id="collapseSix" class="collapse" aria-labelledby="headingSix">
                            <div class="card-body p-0">
                                @using (Html.BeginForm("AracListesi", "MusteriArac", FormMethod.Get))
                                {
                                    <div class="col">
                                        <label>Araç Adı:</label>
                                        @Html.TextBox("aracAdi")
                                    </div><br>


                                    <center><input type="submit" name="name" value="Ara" /> </center><br>
                                }

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <div class="col-lg-9">

            <div class="candidates-listing-item">
                @foreach (var item in Model)
                {
                    <div class="list-grid-item mt-4 p-2">
                        <section class="search-result-item">

                            <a class="image-link" href="#">
                                <img class="image" src="~/Content/Image/@item.resim" style="padding-top:30px; width: 400px; height:200px;">
                            </a>
                            <div class="search-result-item-body">
                                <div class="row">
                                    <div class="col-sm-9">
                                        <h4 class="search-result-item-heading"><a href="#">@item.AracAdi @item.Modeli Model</a></h4>
                                        <p class="info">@item.Sirket.SirketIl @item.Sirket.SirketIlce @item.Sirket.SirketMahalle Mahallesi </p>
                                        <ul>
                                            <li>Minimum Yaş Sınırı: @item.MinimumYasSiniri</li>
                                            <li>Günlük Sınır KM: @item.GunlukSinirKm</li>
                                            <li>Aracın Kendi Anlık KM: @item.AracınKendiAnlikKm</li>
                                            <li>Koltuk Sayısı: @item.KoltukSayisi</li>
                                            <li>Yakıtı: @item.Yakiti</li>
                                            <li>Vites Türü: @item.vitesTuru</li>
                                        </ul>
                                    </div>

                                    <div class="col-sm-3 text-align-center">
                                        <br />
                                        <h4>Fiyatı:</h4>
                                        <p class="value3 mt-sm">@item.GunlukKiralikFiyati TL</p>
                                        <a class="btn btn-primary btn-info btn-sm" href="#">Kirala</a>
                                        <br /><br /><br />
                                        <h6 class="search-result-item-heading" style="color: #007bff;">@item.Sirket.SirketAdi</h6>
                                    </div>
                                </div>
                            </div>


                        </section>

                    </div>
                }

                <div class="row">
                    <div class="col-lg-12">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination job-pagination justify-content-center mt-5 mb-5">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                        <i class="mdi mdi-chevron-double-left f-15"></i>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">4</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="mdi mdi-chevron-double-right f-15"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <link rel="stylesheet" href="~/panel/ltr/css/AracKirala.css">

    <script src="~/panel/ltr/js/AracKirala.js"></script>

